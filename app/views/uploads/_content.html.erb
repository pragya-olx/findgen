<div class="container main-content" id="upload_form" style="display: none;">

  <%= form_tag("/uploads", method: "create", multipart: true) do %>
  <br>
    <div class="row">
      <div class="form-group">
        <label for="sel1">Select Data Type </label>
        <select name="data_type">
          <option>User</option>
          <option>LISP</option>
        </select>
      </div>      
    </div>

    <div class="row">
      <div class="form-group">
        <label>User format(Name, EID, Email, phone, Type, ApproverType, Subgroup)</label>
      </div>      
    </div>

    <div class="row">
      <div class="form-group">
        <label>LISP format(Name, Code, Zone, State, City)</label>
      </div>      
    </div>

    <div class="row">
      <div class="form-group">
        <input name=override type="checkbox"> Override Duplicates</input>          
      </div>      
    </div>

    <%= file_field_tag(:csv, accept: 'text/csv', id: "csv", required: true) %>

    <br>
    <%= submit_tag("Upload", class: "btn btn-primary") %>
  <% end %>

</div>

<script type="text/javascript">
  $("form").on('submit', function(event){
        if(!confirm("Are you sure you want to upload data ?")) {
            event.preventDefault();
        }
    })
</script>